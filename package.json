{
  "name": "@advancedcsg/actions-rush-changed-projects",
  "version": "1.0.0",
  "description": "Github Action RushJS Changed Projects",
  "main": "src/main.js",
  "scripts": {
    "lint": "standard src/**/*",
    "test": "jest --silent",
    "build": "npm run buildMain",
    "buildMain": "ncc build src/main.js -o dist/main --source-map --license licenses.txt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advancedcsg-open/actions-rush-changed-projects.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Rush"
  ],
  "author": "Paul Mowat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/advancedcsg-open/actions-rush-changed-projects/issues"
  },
  "homepage": "https://github.com/advancedcsg-open/actions-rush-changed-projects#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "glob": "7.2.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.31.1",
    "jest": "^27.3.1",
    "standard": "^17.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/lcov-report/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "standard": {
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "ignore": [
      "dist/**/*"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    }
  }
}
